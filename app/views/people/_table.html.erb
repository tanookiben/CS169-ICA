<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Occupation</th>
      <th>Phone Number</th>
    </tr>
  </thead>
  <tbody>
  <% people.each_with_index do |person, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= link_to person.first_name, person_path(person) %></td>
      <td><%= person.last_name %></td>
      <td><%= person.occupation %></td>
      <td>
      <% if person.phone_numbers.first %>
        <%= person.phone_numbers.first.label + ': ' + person.phone_numbers.first.info %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
