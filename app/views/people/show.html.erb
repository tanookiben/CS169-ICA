<h2><%= @person.type %></h2>
<h1><%= @person.full_name %></h1>
<h3>Occupation: <%= @person.occupation %></h3>
<% @person.companies.each do |company| %>
  <h3>Works for <%= link_to company.name, company_path(company), :method => :get %> as a <%= company.representative_role %></h3>
<% end %>
<dl>
  <%= render :partial => 'shared/show_info', :locals => { :contact => @person, :info_type => 'phone_numbers' } %>
  <%= render :partial => 'shared/show_info', :locals => { :contact => @person, :info_type => 'email_addresses' } %>
  <%= render :partial => 'shared/show_info', :locals => { :contact => @person, :info_type => 'websites' } %>
  <%= render :partial => 'shared/show_info', :locals => { :contact => @person, :info_type => 'notes' } %>
</dl>
<% if current_user %>
	<%= link_to 'Edit', edit_person_path(@person), :class => 'btn' %>
	<%= link_to 'Delete', person_path(@person), :method => :delete, :confirm => 'Are you sure?', :class => 'btn' %>
<% end %>
